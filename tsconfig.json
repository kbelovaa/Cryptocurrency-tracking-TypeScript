{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["ES2021.String", "dom"],
    "paths": {
      "App/*": ["src/app/*"],
      "Assets/*": ["src/assets/*"],
      "Components/*": ["src/components/*"],
      "Constants/*": ["src/constants/*"],
      "Context/*": ["src/context/*"],
      "Hooks/*": ["src/hooks/*"],
      "Pages/*": ["src/pages/*"],
      "Services/*": ["src/services/*"],
      "Store/*": ["src/store/*"],
      "Types/*": ["src/types/*"],
      "Utils/*": ["src/utils/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
